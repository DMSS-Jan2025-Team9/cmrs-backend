{
    "family": "notification",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::585008058878:role/ecs-task-execution-role",
    "containerDefinitions": [
      {
        "name": "notification",
        "image": "replace-this-in-workflow",
        "essential": true,
        "portMappings": [
          {
            "containerPort": 8084,
            "hostPort"     : 8084,
            "protocol"     : "tcp",
            "name"         : "notification"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/notification",
            "awslogs-region": "ap-southeast-1",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "healthCheck": {
          "command": [
            "CMD-SHELL",
            "curl -f http://localhost:8084/notification/actuator/health || exit 1"
          ],
          "interval": 90,
          "timeout": 30,
          "retries": 3,
          "startPeriod": 300
        }
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}
