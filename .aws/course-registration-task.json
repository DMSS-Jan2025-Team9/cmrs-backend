{
    "family": "course-registration",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::585008058878:role/ecs-task-execution-role",
    "containerDefinitions": [
      {
        "name": "course-registration",
        "image": "replace-this-in-workflow",  // This will be replaced by GitHub Actions
        "essential": true,
        "portMappings": [
          {
            "containerPort": 8083,
            "protocol": "tcp"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/course-registration",
            "awslogs-region": "ap-southeast-1",
            "awslogs-stream-prefix": "ecs"
          }
        }
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}
